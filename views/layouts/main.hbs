<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://bootswatch.com/5/lumen/bootstrap.min.css"
      rel="stylesheet"
      crossorigin="anonymous"
    />
    <title>Todo List</title>
  </head>
  <body class="bg-light">
    <header>
      <nav class="navbar navbar-dark bg-primary" style="padding: 0 1rem">
        {{! check authentication }}
        <a class="navbar-brand fw-bold fs-2" href="/">
          {{#if user}}{{user.name}}'s {{/if}}
          Todo List</a>
        {{#if isAuthenticated}}
          <a class="btn btn-outline-light" href="/users/logout">Logout</a>
        {{else}}
          <a class="btn btn-outline-light" href="/users/login">Login</a>
        {{/if}}
      </nav>
    </header>
    <div class="container mt-3">
      {{{body}}}
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
  </body>
</html>